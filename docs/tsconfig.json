{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["WebWorker", "DOM"],
    "paths": {
      "@docs/*": ["./*"]
    }
  },
  "include": ["**/*", ".vitepress/**/*", "../typings/global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
