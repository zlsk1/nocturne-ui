{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["WebWorker", "DOM"],
    "paths": {
      "@docs/*": ["./*"]
    },
    "types": ["nocturne-ui/global"],
  },
  "include": ["**/*", ".vitepress"],
  "exclude": ["node_modules"]
}
